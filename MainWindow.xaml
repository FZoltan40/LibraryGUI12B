<Window x:Class="LibraryGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="750">
    <Grid>
        <Menu>
            <MenuItem Header="_Read">
                <MenuItem Header="Authors" Click="MenuItem_Click" />
                <MenuItem Header="Categories" Click="MenuItem_Click_1"/>
                <MenuItem Header="Books" Click="MenuItem_Click_2"/>
                <MenuItem Header="AuthorsBooks" />
            </MenuItem>

            <MenuItem Header="_Create">
                <MenuItem Header="Authors" Click="MenuItem_Click_3"/>
                <MenuItem Header="Categories" Click="MenuItem_Click_4"/>
                <MenuItem Header="Books" Click="MenuItem_Click_5"/>
            </MenuItem>

            <MenuItem Header="_Update">
                <MenuItem Header="Authors"/>
                <MenuItem Header="Categories"/>
                <MenuItem Header="Books"/>
            </MenuItem>

            <MenuItem Header="_Delete">
                <MenuItem Header="Authors"/>
                <MenuItem Header="Categories"/>
                <MenuItem Header="Books"/>
            </MenuItem>
        </Menu>
        <Frame x:Name="MainPage" Padding="15"/>
    </Grid>
</Window>
